<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:text="Question"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="20sp"
            android:drawableLeft="@android:drawable/star_off"
            android:gravity="center_vertical"
            android:drawablePadding="5dp"
            android:layout_margin="10dp"
            android:id="@+id/questionTxt"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:hint="Write your answer"
            android:id="@+id/answerTxtBox"
            android:visibility="gone"
            android:editable="false"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone"
            android:layout_margin="10dp"
            android:id="@+id/seekFormat">

            <com.xw.repo.BubbleSeekBar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/seekBar"
                app:bsb_bubble_color="#39796b"
                app:bsb_track_color="#39796b"
                app:bsb_bubble_text_color="@android:color/white"
                app:bsb_second_track_color="#004d40"
                app:bsb_max="100"
                app:bsb_min="0"
                app:bsb_progress="0"
                app:bsb_section_text_position="bottom_sides"
                app:bsb_show_progress_in_float="false"
                app:bsb_show_section_mark="true"
                app:bsb_show_section_text="true"
                app:bsb_show_thumb_text="true"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:id="@+id/txtLabel"
                />

        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>