<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="150dp"
    android:layout_height="110dp"
    android:layout_gravity="center"
    android:layout_margin="10dp"
    app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Survey Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:padding="5dp"
            android:id="@+id/nameOfSurvey"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Survey Category"
            android:textSize="14sp"
            android:padding="5dp"
            android:id="@+id/categoryOfSurvey"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="5dp">
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0\nQu"
                android:gravity="center"
                android:padding="5dp"
                android:background="#cfb109"
                android:textColor="@android:color/white"
                android:id="@+id/questionNumbers"
                />
            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:text="0\nPt"
                android:gravity="center"
                android:padding="5dp"
                android:background="#cf3109"
                android:textColor="@android:color/white"
                android:id="@+id/pointCount"
                />
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>